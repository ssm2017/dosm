<?php

/**
 * Implements hook_node_view.
 */
function dosm_sysadmin_node_view($node, $view_mode, $langcode) {
  if (in_array($node->type, array('dosm_machine', 'dosm_user', 'dosm_simulator'))) {
    // check if the server is responding
    if (dosm_sysadmin_display_machine_status($node) && dosm_sysadmin_can_see_form($node)) {
      switch($node->type) {
        case 'dosm_machine':
          $node->content['dosm_machine'] = dosm_sysadmin_machine_page($node);
          break;
        case 'dosm_user':
          $node->content['dosm_user'] = dosm_sysadmin_user_page($node);
          break;
        case 'dosm_simulator':
          $node->content['dosm_simulator'] = dosm_sysadmin_simulator_page($node);
          break;
      }
    }
    else {
      drupal_goto();
    }
  }
}

function dosm_sysadmin_can_see_form($node, $account=null) {
  global $user;
  if (dosm_is_manager($user->uid, $node) || $user->uid == 1) {
    return TRUE;
  }
  return FALSE;
}

function dosm_sysadmin_display_machine_status(&$node) {
  // check the content type
  switch($node->type) {
    case 'dosm_machine':
      $url = $node->field_dosm_machine_url[LANGUAGE_NONE][0]['value'];
      $port = $node->field_dosm_machine_port[LANGUAGE_NONE][0]['value'];
      $path = $node->field_dosm_machine_path[LANGUAGE_NONE][0]['value'];
      break;
    case 'dosm_simulator':
    case 'dosm_user':
      // get the machine
      $url = $node->field_dosm_machine[LANGUAGE_NONE][0]['entity']->field_dosm_machine_url[LANGUAGE_NONE][0]['value'];
      $port = $node->field_dosm_machine[LANGUAGE_NONE][0]['entity']->field_dosm_machine_port[LANGUAGE_NONE][0]['value'];
      $path = $node->field_dosm_machine[LANGUAGE_NONE][0]['entity']->field_dosm_machine_path[LANGUAGE_NONE][0]['value'];
      break;
  }

  $params = array(
    'url' => $url,
    'port' => $port,
    'path' => $path,
    'method' => 'ping',
    'params' => array()
  );
  $response = dosm_xmlrpc_call($params);
  if (!$response['success']) {
    $node->content['dosm_sysadmin_server_status'] = array(
      '#type' => 'item',
      '#markup' => '<div class="messages error alert alert-danger">'. t('The system is not responding. Error code : @error', array('@error'=>$response['message'])). '</div>'
    );
    return FALSE;
  }
  $node->content['dosm_sysadmin_server_status'] = array(
    '#type' => 'item',
    '#weight' => -99,
    '#markup' => '<div class="messages status alert alert-success">'. t('The machine remote is online'). '</div>'
  );
  return TRUE;
}

function dosm_sysadmin_machine_page($node) {
  $output = array();

  // get the sim users
  $url = $node->field_dosm_machine_url[LANGUAGE_NONE][0]['value'];
  $port = $node->field_dosm_machine_port[LANGUAGE_NONE][0]['value'];
  $path = $node->field_dosm_machine_path[LANGUAGE_NONE][0]['value'];
  $params = array(
    'url' => $url,
    'port' => $port,
    'path' => $path,
    'method' => 'get_sim_users',
    'params' => array(
      'password' => $node->field_dosm_machine_password[LANGUAGE_NONE][0]['value']
    )
  );
  $response = dosm_xmlrpc_call($params);
  if ($response['success']) {
    $sim_users = $response['data']['sim_users'];

    // horizontal tabs
    $output['#attached']['css'] = array(
      drupal_get_path('module', 'field_group') . '/horizontal-tabs/horizontal-tabs.css',
    );
    $output['#attached']['js'] = array(
      drupal_get_path('module', 'field_group') . '/horizontal-tabs/horizontal-tabs.js',
    );
    $output['machine_form'] = array(
      '#type' => 'horizontal_tabs',
      '#tree' => TRUE,
      '#prefix' => '<div id="machine-form">',
      '#suffix' => '</div>',
    );

    // show users
    $output['machine_form']['sim_users'] = array(
      '#type' => 'fieldset',
      '#title' => t('Sim users'),
      '#tree' => TRUE,
      '#parents' => array('machine_form')
    );
    $sub_content = dosm_sysadmin_sim_users_content($sim_users, $params);
    $output['machine_form']['sim_users']['content'] = array(
      '#type' => 'item',
      '#markup' => drupal_render($sub_content),
      '#tree' => TRUE,
      '#parents' => array('machine_form', 'sim_users')
    );

    // overview
    $sub_content = dosm_sysadmin_overview_content($sim_users);
    $output['machine_form']['overview'] = array(
      '#type' => 'fieldset',
      '#title' => t('Overview'),
      '#tree' => TRUE,
      '#parents' => array('machine_form')
    );
    $output['machine_form']['overview']['content'] = array(
      '#type' => 'item',
      '#markup' => drupal_render($sub_content),
      '#tree' => TRUE,
      '#parents' => array('machine_form', 'overview')
    );
  }
  else {
    $output['machine_form']['sim_users'][] = array(
      '#type' => 'item',
      '#title' => t('Server status'),
      '#markup' => '<div class="messages error alert alert-danger">'. t('The system is not responding. Error code : @error', array('@error'=>$response['message'])). '</div>'
    );
  }
  return $output;
}

