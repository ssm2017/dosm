function dosm_sysadmin_overview_content($sim_users) {
  $output = array();
  // prepare the table
  $header = array(
    'name',
    'oar ok',
    'oars',
    'iar ok',
    'iars',
    'sims',
    'sims details',
  );
  $sim_header = array(
    'name',
    'port',
    'uuid',
  );
  $region_header = array(
    'name',
    'alive',
    'valid',
    'port',
    'radmin',
    'regions',
    'regions details',
  );
  $rows = array();
  foreach ($sim_users as $sim_user) {
    $row = array();
    $row[] = $sim_user['name'];
    $row[] = $sim_user['has_oar_folder'] ? '<img src="/misc/watchdog-ok.png" title="Yes"/>' : '<img src="/misc/watchdog-error.png" title="No"/>';
    $row[] = count($sim_user['oars']);
    $row[] = $sim_user['has_iar_folder'] ? '<img src="/misc/watchdog-ok.png" title="Yes"/>' : '<img src="/misc/watchdog-error.png" title="No"/>';
    $row[] = count($sim_user['iars']);
    $sim_count = count($sim_user['sims']);
    $row[] = $sim_count;
    if ($sim_count) {
      $sim_rows = array();
      foreach ($sim_user['sims'] as $sim) {
        $sim_row = array();
        $sim_row[] = $sim['name'];
        $sim_row[] = $sim['alive'] ? '<img src="/misc/watchdog-ok.png" title="Yes"/>' : '<img src="/misc/watchdog-error.png" title="No"/>';
        $sim_row[] = $sim['valid'] ? '<img src="/misc/watchdog-ok.png" title="Yes"/>' : '<img src="/misc/watchdog-error.png" title="No"/>';
        $sim_row[] = $sim['port'];
        $sim_row[] = $sim['radmin_ready'] ? '<img src="/misc/watchdog-ok.png" title="Yes"/>' : '<img src="/misc/watchdog-error.png" title="No"/>';
        $regions_count = count($sim['regions']);
        $sim_row[] = $regions_count;
        if ($regions_count) {
          $regions_rows = array();
          foreach ($sim['regions'] as $region) {
            $region_row = array();
            $region_row[] = $region['name'];
            $region_row[] = $region['internal_port'];
            $region_row[] = $region['region_uuid'];
            $regions_rows[] = $region_row;
          }
          $sim_row[] = theme('table', array('rows' => $regions_rows, 'header' => $sim_header));
        }
        $sim_rows[] = $sim_row;
      }
      $row[] = theme('table', array('rows' => $sim_rows, 'header' => $region_header));
    }
    $rows[] = $row; 
  }
  $output['values'] = array(
    '#type' => 'item',
    '#markup' => theme('table', array('rows' => $rows, 'header' => $header)),
    '#prefix' => '<div class="table-responsive">',
    '#suffix' => '</div>'
  );
  return $output;
}

function dosm_sysadmin_values_content($values) {
  $output = array();

  // build the output
  $markup = '';
  $markup .= '<div class="values">';
  $markup .= '<dl>';
  ksort($values);
  $rows = array();
  foreach ($values as $k => $value) {
    if (!is_array($value)) {
      $row = array(
        $k,
        is_bool($value) ? $value ? '<img src="/misc/watchdog-ok.png" title="Yes"/>' : '<img src="/misc/watchdog-error.png" title="No"/>' : $value
      );
    }
    else {
      $row = array(
        $k,
        count($value)
      );
    }
    $rows[] = $row;
  }
  $output['content'] = array(
    '#type' => 'item',
    '#markup' => theme('table', array('rows' => $rows)),
    '#prefix' => '<div class="table-responsive">',
    '#suffix' => '</div>'
  );

  return $output;
}

function dosm_sysadmin_sim_content($sim, $params) {
  $output = array();

  $output['sim'] = array(
    '#type' => 'horizontal_tabs',
    '#tree' => TRUE,
    '#prefix' => '<div id="sim-'.$sim['name'].'-form">',
    '#suffix' => '</div>',
  );

  $output['sim']['content'] = array(
    '#type' => 'horizontal_tabs',
    '#tree' => TRUE,
    '#prefix' => '<div id="sim-'.$sim['name'].'-content-tabs-form">',
    '#suffix' => '</div>',
  );

  // start/stop/kill
  if ($sim['valid']) {
    $output['sim']['content']['start_stop'] = array(
      '#type' => 'fieldset',
      '#title' => t('Start/Shutdown/kill'),
      '#tree' => TRUE,
      '#parents' => array('sim', 'content')
    );
    $sub_form = drupal_get_form('dosm_sysadmin_cmd_run_sim_form', $sim, $params);
    $output['sim']['content']['start_stop']['content'] = array(
      '#type' => 'item',
      '#markup' => drupal_render($sub_form),
      '#tree' => TRUE,
      '#parents' => array('sim', 'content', 'start_stop')
    );
  }

  // log
  if ($sim['has_opensim_log']) {
    $output['sim']['content']['show_log'] = array(
      '#type' => 'fieldset',
      '#title' => t('Log'),
      '#tree' => TRUE,
      '#parents' => array('sim', 'content')
    );
    $sub_form = drupal_get_form('dosm_sysadmin_cmd_show_log_form', $sim, $params);
    $output['sim']['content']['show_log']['content'] = array(
      '#type' => 'item',
      '#markup' => drupal_render($sub_form),
      '#tree' => TRUE,
      '#parents' => array('sim', 'content', 'show_log')
    );
  }

  // regions
  if (count($sim['regions'])) {
    $output['sim']['content']['regions'] = array(
      '#type' => 'fieldset',
      '#title' => t('Regions'),
      '#tree' => TRUE,
      '#parents' => array('sim', 'content')
    );
    $sub_content = dosm_sysadmin_regions_content($sim['regions'], $params);
    $output['sim']['content']['regions']['content'] = array(
      '#type' => 'item',
      '#markup' => drupal_render($sub_content),
      '#tree' => TRUE,
      '#parents' => array('sim', 'content', 'regions')
    );
  }

  // show radmin console
  if (module_exists('dosm_radmin') && isset($sim['radmin_ready']) && $sim['radmin_ready']) {
    $output['sim']['content']['radmin'] = array(
      '#type' => 'fieldset',
      '#title' => t('Console commands'),
      '#tree' => TRUE,
      '#parents' => array('sim', 'content')
    );
    $config = array(
      'url' => $params['url'],
      'port' => $sim['radmin_port'],
      'password' => $sim['radmin_password'],
    );
    $sub_content = dosm_radmin_radmin_content($config);
    $output['sim']['content']['radmin']['content'] = array(
      '#type' => 'item',
      '#markup' => drupal_render($sub_content),
      '#tree' => TRUE,
      '#parents' => array('sim', 'content', 'radmin')
    );
  }

  // show values
  $output['sim']['content']['values'] = array(
    '#type' => 'fieldset',
    '#title' => t('Values'),
    '#tree' => TRUE,
    '#parents' => array('sim', 'content')
  );
  $sub_content = dosm_sysadmin_values_content($sim);
  $output['sim']['content']['values']['content'] = array(
